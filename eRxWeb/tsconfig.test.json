{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [ "es5", "es2015", "dom" ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false
  },
  "types": [
    "jasmine",
    "jquery",
    "bootstrap"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "SPA/Lib",
    "SPA/Tools"
  ],
  "awesomeTypeScriptLoaderOptions": {
    "useWebpackText": true
  }
}